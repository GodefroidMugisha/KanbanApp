@using System.Net.Http.Json;

@using KanbanApp.Models

@inject TaskService TaskService

<div class="card mb-2" draggable="true" @ondragstart="() => TaskService.SetDragging(Task.Id)">
    <div class="card-body p-2">
        <div class="d-flex justify-content-between">
            <div>
                <h6 class="mb-1">@Task.Title</h6>
                @if (!string.IsNullOrWhiteSpace(Task.Description))
                {
                    <div class="small text-muted">@Task.Description</div>
                }
            </div>
            <div class="d-flex flex-column align-items-end">
                <button class="btn btn-sm btn-outline-secondary mb-1" @onclick="() => OnEdit.InvokeAsync(Task)">Edit</button>
                <button class="btn btn-sm btn-outline-danger" @onclick="() => OnDelete.InvokeAsync(Task.Id)">Delete</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public KanbanTask Task { get; set; } = default!;
    [Parameter] public EventCallback<KanbanTask> OnEdit { get; set; }
    [Parameter] public EventCallback<Guid> OnDelete { get; set; }
}
